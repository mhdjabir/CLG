<section class="reviews-section py-5 text-center">
  <div class="container">
    <h2 class="section-title fw-bold mb-3">What Our Customers Say</h2>
    <p class="section-subtitle mb-5">Real feedback from our happy buyers!</p>

    <div class="row justify-content-center">
      {{#each feedbacks}}
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="review-card p-4 shadow-sm h-100">
          <div class="quote-icon mb-2 text-primary"><i class="fas fa-quote-left fa-lg"></i></div>
          <p class="review-message mb-3">"{{this.message}}"</p>
          <h5 class="review-author fw-semibold mb-0">- {{this.fullname}}</h5>
        </div>
      </div>
      {{/each}}
    </div>

    <div class="mt-5">
      <a href="/feed" class="btn btn-primary btn-lg">Add Your Feedback</a>
    </div>
  </div>
</section>
