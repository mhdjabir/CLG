<style>
 

    h2 {
        color: #ff9a47;
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
    }

    h4 {
        margin-top: 1rem;
        font-size: 1.3rem;
        cursor: pointer;
        position: relative;
        padding-left: 1.2rem;
    }

    h4::before {
        position: absolute;
        left: 0;
        color: #999;
        transition: transform 0.3s;
    }

    h4.active::before {
        transform: rotate(90deg);
    }

    p {
        margin-bottom: 1.2rem;
        padding-left: 1rem;
        display: none;
    }

    p.show {
        display: block;
    }

    .term-section {
